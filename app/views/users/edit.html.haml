/ .form
/   %h3 Edit User Profile
/ = render :partial => 'form'

%h2
  Editing
  = @user.firstname

= form_for @user do |f|
  %div
    = f.label :email
    = f.email_field :email

  %div
    = f.label :password
    = f.password_field :password

  %div
    = f.label :password_confirmation
    = f.password_field :password_confirmation

  = f.submit