<!DOCTYPE html>
<html>
<head>
  <title>Shelter</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default navbar-static-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Animal Rescue</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
              <ul class="nav navbar-nav">
                <li><%= link_to 'Adopt', animals_path %></li>
                <li><%= link_to 'FAQ', faq_path %></li><li>
                <li><%= link_to 'Contact', contact_path %></li>
                <li><%= link_to 'About', about_path %></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Search for Species <span class="caret"></span></a>
                  <ul class="dropdown-menu" role="menu">
                    <li><a href="#">Dogs</a></li>
                    <li><a href="#">Cats</a></li>
                    <li><a href="#">Other</a></li>
                  </ul>
                </li>
              <% if @current_user.present? %>
                <li class="loggedin"><%= link_to 'Edit profile', edit_user_path(@current_user) %></li>
                <li class="loggedin"><%= link_to "Sign out #{@current_user.firstname}", login_path, method: :delete, data: { confirm: 'Are you sure?'} %></li>
              <% else %>
                  <li class="login"><%= link_to 'Sign up', new_user_path %></li>
                  <li class="login"><%= link_to 'Login', login_path %></li>
              <% end %>
              </ul>
            </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>







    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <div class="carousel-inner" role="listbox">
          <img src="http://a1.dspnimg.com/data/l/35012c14061a22535d92ca5bcf93dc53_Ud6mJrVC_l.jpg" alt="First slide">
          <div class="container">
            <div class="carousel-caption">
              <p>Australian Animal Rescue Incorporated is a not for profit, volunteer run, non government organization.</p>
              <p><a class="btn btn-lg btn-default" href="/login" role="button">Sign up today</a></p>
            </div>
          </div>
      </div>
    </div><!-- /.carousel -->







    <div class="container">
      <%= yield %>
    </div>
  </div>
</body>
</html>
